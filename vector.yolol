xv=:xx-x yv=:yy-y zv=:zz-z x=:xx y=:yy z=:zz 
s=SQRT(xv^2+yv^2+zv^2) :xu=(xv/s)*100 :xu-=(:xu%1)
:yu=(yv/s)*100 :yu-=(:yu%1) :zu=(zv/s)*100 :zu-=(:zu%1)
:vector="\nX: "+:xu+"%\nY: "+:yu+"%\nZ: "+:zu+"%"
GOTO1

